#!/usr/bin/env bash
set -Eeuo pipefail
SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
PROJECT_DIR=$(cd $SCRIPT_DIR/..; pwd)
SCRIPT=$0
JAR=$PROJECT_DIR/target/yb-workload-sim.jar
RF=3
YB_BASE=$PROJECT_DIR/yb-base
export SPRING_APPLICATION_NAME="Live Demo"
function app(){
  OP=${1:-start}; shift
  app-$OP "$@"
}
function cluster(){
  OP=${1:-start}; shift
  cluster-$OP "$@"
}

function node(){
  OP=${1:-start}; shift
  node-$OP "$@"
}

function start(){
  echo Demo start
  stop
  cluster start
  app start
}

function stop(){
  echo Demo stop
  app stop
  cluster stop
}

function status(){

  cat<<EOF
APP: http://127.0.0.1:8080/

`yugabyted status --base_dir $YB_BASE/n1`
EOF

}


function cluster-start(){
  echo CLUSTER start
  for i in 1 2 3
  do
    node start $i
  done
}


function cluster-stop(){
  echo CLUSTER stop
  for i in 1 2 3 4 5 6
  do
    node destroy $i
  done
}

function node-add(){
  node start $1
}

function node-remove(){
  node stop $1
}

function node-del(){
  node stop $1
}

function node-stop(){
  i=${1:?"Node number missing"}
  if [[ $(($i)) -lt 1 ]]
  then
    echo "Index must be >= 1"
    exit 1
  fi
  echo "NODE (node-$i) stop"
  base_dir=$YB_BASE/n$i
  yugabyted stop --base_dir $base_dir
}

function node-destroy(){
  i=${1:?"Node number missing"}
  if [[ $(($i)) -lt 1 ]]
  then
    echo "Index must be >= 1"
    exit 1
  fi
  echo "NODE (node-$i) destroy"
  base_dir=$YB_BASE/n$i
  yugabyted destroy --base_dir $base_dir
}

regions=(singapore jakarta manila)
zones=(dc1 dc2 dc3)

function node-start(){
  i=${1:?"Node number missing"}
  if [[ $(($i)) -lt 1 ]]
  then
    echo "Index must be >= 1"
    exit 1
  fi

  base_dir=$YB_BASE/n$i
  iface=127.0.0.$i
  if ! ip a show lo0 | grep $iface/8 &> /dev/null
  then
    echo Create interface $iface
    sudo ifconfig lo0 alias $iface &> /dev/null
  fi

  master_flags="flagfile=$PROJECT_DIR/master.gflags"
  tserver_flags="flagfile=$PROJECT_DIR/tserver.gflags"

  other_args=""
  im3=0
  if [[ $i != 1 ]]; then
    other_args="--join 127.0.0.1 --ui=false"
  fi
  index=$(($i - 1))
  im3=$(expr $index % 3) || im3=0
  region=${regions[$im3]}
  zone=${zones[$im3]}
  echo Start Node [$region/$zone/node-$i]
  yugabyted start \
    --base_dir $base_dir \
    --enable_pg_parity_tech_preview  \
    --cloud_location "demo.$region.$zone" \
    --advertise_address $iface  \
    --master_flags="$master_flags" \
    --tserver_flags="$tserver_flags" \
    $other_args
}

function app-start(){
  echo APP start \(http://127.0.0.1:8080\)
  nohup java -jar $JAR &> $PROJECT_DIR/app.log &
}

function app-stop(){
  echo APP stop
  ps -eaf | grep "java -jar $JAR" | grep -v grep | awk '{print $2}' | while read pid
  do
    echo stop java $pid
    kill -9 $pid
  done || echo
  echo app stopped
}

function app-logs(){
  tail -f $PROJECT_DIR/app.log
}

OP=${1:-status}; shift
$OP "$@"
